{
    "name": "coldfusion",
    "displayName": "coldfusion",
    "description": "CFML Language Support for Visual Studio Code",
    "version": "1.0.0",
    "publisher": "ilich8086",
    "homepage": "https://github.com/ilich/vscode-coldfusion",
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/ilich/vscode-coldfusion.git"
    },
    "bugs": {
        "url": "https://github.com/ilich/vscode-coldfusion/issues"
    },
    "engines": {
        "vscode": "^1.18.0"
    },
    "categories": [
        "Languages",
        "Snippets",
        "Themes"
    ],
    "keywords": [
        "CFML",
        "ColdFusion",
        "Lucee"
    ],
    "activationEvents": [
        "onLanguage:cfml",
        "workspaceContains:**/*.cfm",
        "workspaceContains:**/*.cfml",
        "workspaceContains:**/*.cfc"
    ],
    "main": "./out/cfmlMain",
    "contributes": {
        "commands": [
            {
                "command": "cfml.toggleBlockComment",
                "category": "CFML",
                "title": "Toggle Block Comment"
            },
            {
                "command": "cfml.toggleLineComment",
                "category": "CFML",
                "title": "Toggle Line Comment"
            }
        ],
        "keybindings": [
            {
                "command": "cfml.toggleLineComment",
                "key": "ctrl+/",
                "mac": "cmd+/",
                "when": "editorTextFocus && !editorReadonly && editorLangId == cfml"
            },
            {
                "command": "cfml.toggleBlockComment",
                "key": "shift+alt+a",
                "mac": "shift+alt+a",
                "when": "editorTextFocus && !editorReadonly && editorLangId == cfml"
            }
        ],
        "languages": [
            {
                "id": "cfml",
                "aliases": [
                    "CFML",
                    "cfml"
                ],
                "extensions": [
                    ".cfm",
                    ".cfml",
                    ".cfc"
                ],
                "configuration": "./cfml.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "cfml",
                "scopeName": "text.html.cfm",
                "path": "./syntaxes/cfml.tmLanguage"
            }
        ],
        "snippets": [
            {
                "language": "cfml",
                "path": "./snippets/snippets.json"
            }
        ],
        "themes": [
            {
                "label": "CFML Light",
                "uiTheme": "vs",
                "path": "./themes/cfml_light.json"
            },
            {
                "label": "CFML Dark",
                "uiTheme": "vs-dark",
                "path": "./themes/cfml_dark.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "snippets": "grunt"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "grunt": "^1.0.1",
        "typescript": "^2.5.3",
        "vscode": "^1.1.5"
    }
}
